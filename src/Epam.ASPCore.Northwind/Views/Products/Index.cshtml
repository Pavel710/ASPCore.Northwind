@model IEnumerable<Epam.ASPCore.Northwind.WebUI.Models.ProductsModel>

@{
    ViewData["Title"] = "Products Page";
}

<div>
    <div class="text-right">
        <button type="button" class="btn btn-primary add" onclick="AddItem()">Add</button>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Product Name</th>
            <th scope="col">QuantityPer Unit</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Units In Stock</th>
            <th scope="col">Units On Order</th>
            <th scope="col">Reorder Level</th>
            <th scope="col">Discontinued</th>
            <th scope="col">Category</th>
            <th scope="col">Supplier</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.ProductId">
                <th>@item.ProductName</th>
                <th>@item.QuantityPerUnit</th>
                <th>@item.UnitPrice</th>
                <th>@item.UnitsInStock</th>
                <th>@item.UnitsOnOrder</th>
                <th>@item.ReorderLevel</th>
                <th>@item.Discontinued</th>
                <th>@item.Category.CategoryName</th>
                <th>@item.Supplier.CompanyName</th>
                <th><button type="button" class="btn btn-primary update" onclick="UpdateItem(this)">Update</button></th>
            </tr>
        }
        </tbody>
    </table>
</div>
