@model Epam.ASPCore.Northwind.WebUI.Models.ProductsModel
@{
    ViewData["Title"] = "Add";
}

<div class="container">
    <h2>Product form</h2>
    <form class="form-horizontal" method="post" asp-controller="Products" asp-action="Add">
        <div class="form-group">
            <label class="control-label col-sm-2">Product Name:</label>
            <div class="col-sm-10">
                <input asp-for="ProductName" class="form-control" placeholder="Enter name">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Quantity Per Unit:</label>
            <div class="col-sm-10">
                <input asp-for="QuantityPerUnit" class="form-control" placeholder="Enter quantity">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Unit Price:</label>
            <div class="col-sm-10">
                <input asp-for="UnitPrice" class="form-control" placeholder="Enter price">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Units In Stock:</label>
            <div class="col-sm-10">
                <input asp-for="UnitsInStock" class="form-control" placeholder="Enter number">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Units On Order:</label>
            <div class="col-sm-10">
                <input asp-for="UnitsOnOrder" class="form-control" placeholder="Enter number">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Reorder Level:</label>
            <div class="col-sm-10">
                <input asp-for="ReorderLevel" class="form-control" placeholder="Enter level">
            </div>
        </div>
        <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label><input type="checkbox" asp-for="Discontinued"> Discontinued</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Select list:</label>
            <select asp-for="Category.CategoryId" asp-items="ViewBag.Categories"></select>
        </div>
        <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>

