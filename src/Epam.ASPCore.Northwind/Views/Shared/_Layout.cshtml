<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Northwind</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/template.css" />
</head>
<body>
    <header class="header-section">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="site-logo">Northwind</a>
        <div class="nav-switch">
            <i class="fa fa-bars"></i>
        </div>
        <div class="nav-warp">
            <div class="user-panel">
                <a href="#">Login</a> /
                <a href="#">Register</a>
            </div>
            <ul class="main-menu">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-area="" asp-controller="Categories" asp-action="Index">Categories</a></li>
                <li><a asp-area="" asp-controller="Products" asp-action="Index">Products</a></li>
            </ul>
        </div>
    </header>

    <partial name="_CookieConsentPartial" />

    @RenderBody()

    <footer class="footer-section">
        <div class="container">
            <div class="copyright">Copyright &copy; 2019 - Northwind</div>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/main.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
