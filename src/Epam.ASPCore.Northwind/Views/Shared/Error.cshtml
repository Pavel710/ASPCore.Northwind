@model ErrorViewModel
@{
    Layout = "";
    ViewData["Title"] = "Error";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Northwind</title>

    <link rel="stylesheet" href="~/css/error-page-style.css" />
</head>

<body>

    <div id="errorpage">
        <div class="errorpage">
            <div class="errorpage-404">
                <h1>Oops!</h1>
            </div>
            <h2>Error.</h2>
            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }
            <p>An error occurred while processing your request.</p>
            <a asp-area="" asp-controller="Home" asp-action="Index">Go To Homepage</a>
        </div>
    </div>

</body>
</html>