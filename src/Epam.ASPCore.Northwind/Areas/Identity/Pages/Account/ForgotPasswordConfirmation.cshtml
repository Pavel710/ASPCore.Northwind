@page
@model ForgotPasswordConfirmation
@{
  ViewData["Title"] = "Forgot password confirmation";
}

<section class="hero-section set-bg main-page-section" data-setbg="../../images/template/bg.jpg">
  <div class="login-container">
    <div class="d-flex justify-content-center h-100">
      <div class="card">
        <div class="card-header forgot-password-title">
          <h3>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
          <h5 style="color: white">@Model.Message</h5>
        </div>
      </div>
    </div>
  </div>
</section>