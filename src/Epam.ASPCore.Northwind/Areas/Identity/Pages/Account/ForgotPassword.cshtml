@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section class="hero-section set-bg main-page-section" data-setbg="../../images/template/bg.jpg">
    <div class="login-container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header forgot-password-title">
                    <h3><i class="fa fa-lock fa-4x"></i></h3>
                    <h3>@ViewData["Title"]</h3>
                    <p>You can reset your password here.</p>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            <input asp-for="Input.Email" class="form-control email" placeholder="Enter your email" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Reset Password" class="btn float-right forgot-password-btn">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
