@page
@using Epam.ASPCore.Northwind.WebUI.Models
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<section class="page-top-section set-bg" data-setbg="../../../images/template/page-top-bg.jpg">
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        @await Component.InvokeAsync("Breadcrumbs", new List<BreadcrumbModel> { new BreadcrumbModel { IsCurrentPage = true, EntityName = "Profile" } })
    </div>
</section>

<section class="main-page-section">
    <div class="container">
        <div class="section-title">
            <h2>Profile</h2>
            <partial name="_StatusMessage" for="StatusMessage" />
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form id="profile-form" class="form" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label class="col-sm-2">Username</label>
                        <div class="col-sm-10">
                            <input value="@Model.Username" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2">Phone Number</label>
                        <div class="col-sm-10">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="Input.PhoneNumber"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <button id="update-profile-button" type="submit" class="btn btn-success btn-rounded">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}